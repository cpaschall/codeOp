<div class="container py-5">
  <h1 class="mb-4 text-center">Sign Up</h1>
  <div class="row d-flex align justify-content-center h-100">
    <div class="card" style="max-width: 40rem;">
      <div class="card-body">
        <form id="signup">
          <div class="mb-4 mt-4">
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="Enter the Username" id="signup-name"
                  aria-label="Username">
              </div>
            </div>

            <div class="mb-4 mt-4">
              <!-- <label for="formControlInput" class="form-label">Email address</label> -->
              <input type="email" class="form-control" placeholder="Enter your email address" id="signup-email">
            </div>

            <!-- Password input -->
            <div class="mb-4">
              <!-- <label for="formControlInput" class="form-label">Password</label> -->
              <input type="password" class="form-control" placeholder="Enter password" id="signup-password">
              <br>
              <br>
            </div>
            <div id='skill-check'>
              <div class="form-check">
                <p>Select your current skills:</p>
                <input class="form-check-input" name='skills1' type="checkbox" value="html" id="skill1">
                <label class="form-check-label" for="skill1">
                  HTML
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name='skill2' type="checkbox" value="css" id="skill2">
                <label class="form-check-label" for="skill2">
                  CSS
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name='skill3' type="checkbox" value="javascript" id="skill3">
                <label class="form-check-label" for="skill3">
                  JavaScript
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name='skill4' type="checkbox" value="mysql" id="skill4">
                <label class="form-check-label" for="skill4">
                  MySql
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name='skill5' type="checkbox" value="react" id="skill5">
                <label class="form-check-label" for="skill5">
                  React
                </label>
              </div>
            </div>
            <div class="d-flex align-items-center justify-content-center pb-4 pt-4">
              <button type="submit" class="btn btn-primary" class="center">Sign up</button>
            </div>
          </div>
      </div>
      </form>
    </div>
  </div>
</div>
<div class="container py-5 text-center">
  <h1 class="mb-4">Sign Up</h1>
  <div class="row d-flex align justify-content-center h-100">
    <div class="card" style="max-width: 40rem;">
      <div class="card-body">
        <form id="signup">
          <div class="mb-4 mt-4">
            <div class="row">
              <div class="col">
                <input type="text" class="form-control" placeholder="Enter the Username" id="signup-name" aria-label="Username">
              </div>
            </div>

            <div class="mb-4 mt-4">
              <!-- <label for="formControlInput" class="form-label">Email address</label> -->
              <input type="signup-email" class="form-control" placeholder="Enter your email address" id="signup-email">
            </div>

            <!-- Password input -->
            <div class="mb-4">
              <!-- <label for="formControlInput" class="form-label">Password</label> -->
              <input type="password" class="form-control" placeholder="Enter password" id="signup-password">
              <button id="signup-form" type="submit" class="btn btn-primary">Sign up</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
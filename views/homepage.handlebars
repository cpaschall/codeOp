<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <div class="about">
      <p>
        CodeOp is dedicated to providing a platform for budding developers, project managers, and/or seasoned developers
        to share skills and opportunities.
      </p>
    </div>
    <p>
      <span class="skills-needed">{{skills_needed}}</span>
      Skills needed
    </p>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
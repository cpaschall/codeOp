<section class="vh-100">
    <div class="container">
        <h2>Edit Profile</h2>
        <div class="card p-3">
            <div class="row">
                <!-- upload photo (optional) -->
                <div class="col-md-3 border-end">
                    <div class="text-center">
                        <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
                        <h6>Upload a different photo</h6>

                        <input type="file" class="form-control">
                    </div>
                </div>
                <!-- personal info (right coloumn) -->
                <div class="col-md-9 px-4 py-3">
                <form class="form">
                    <div class="form-group mt-3">
                        <label class="col-lg-3 control-label fw-bold">Name:</label>
                        <div class="col-lg-8">
                        <input class="form-control" type="text" value="{{ user.name }}" id="edit-name"> 
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label class="col-lg-3 control-label fw-bold">Email:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="{{ user.email }}">
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label class="col-lg-3 control-label fw-bold">Bio:</label>
                        <div class="col-lg-8">
                            <textarea class="form-control" type="text" value=""></textarea>
                        </div>
                    </div>

                    <!-- Skills checkbox -->
                    <div id="skills-check">
                        <div class="form-check mt-3">
                            <p class="fw-bold">Skills:</p>
                            <input class="form-check-input" type="checkbox" value="html" id="flexCheckDefault" />
                            <label class="form-check-label" for="skill1">HTML</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="css" id="flexCheckDefault" />
                            <label class="form-check-label" for="skill2">CSS</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="javascript" id="flexCheckDefault" />
                            <label class="form-check-label" for="skill3">JavaScript</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="mysql" id="flexCheckDefault" />
                            <label class="form-check-label" for="skill4">MySql</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="react" id="flexCheckDefault" />
                            <label class="form-check-label" for="skill5">React</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-primary btn-lg me-md-2 blog-update" type="submit">Edit profile</button>
                        </div>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</section>
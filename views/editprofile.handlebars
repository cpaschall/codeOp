<section class="vh-100">
    <div class="container">
        <h2>Edit Profile</h2>
        <div class="card p-3">
            <form id="edit-update">
                <div class="form-group mt-3">
                    <label class="col-lg-3 control-label fw-bold">Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="" id="edit-name">{{user.name}}
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label class="col-lg-3 control-label fw-bold">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="">{{user.email}}
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label class="col-lg-3 control-label fw-bold">Bio:</label>
                    <div class="col-lg-8">
                        <textarea class="form-control" type="text" value=""></textarea>
                    </div>
                </div>

                    <!-- Skills checkbox -->
                    <div class="form-check mt-3">
                        <p class="fw-bold">Skills:</p>
                        {{#if user.skills.length}}
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" />
                        <label class="form-check-label" for="skills">HTML</label>
                        {{else}}
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" for="skills">HTML</label>
                        {{/if}}
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" for="skills">CSS</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" for="skills">JavaScript</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" for="skills">MySql</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                        <label class="form-check-label" for="skills">React</label>
                    </div>

                    <div class="mt-4">
                        <button class="btn btn-primary">Submit changes</button>
                    </div>
                </div>
                </div>
            </form>
        </div>
    </div>
</section>